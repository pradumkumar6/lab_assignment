<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dishes Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-bold text-center mb-6">Dishes Dashboard</h1>
      <div
        id="dishes"
        class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
      >
        <% dishes.forEach(dish => { %>
        <div
          id="dish_<%= dish._id %>"
          class="dish-card bg-white shadow-lg rounded-lg overflow-hidden"
        >
          <img
            src="<%= dish.imageUrl %>"
            alt="<%= dish.dishName %>"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h2 class="text-xl font-bold mb-2"><%= dish.dishName %></h2>
            <p class="text-gray-600 mb-2">
              Published: <%= dish.isPublished ? 'Yes' : 'No' %>
            </p>
            <form
              action="/api/dishes/<%= dish.dishId %>/toggle"
              method="POST"
              class="toggle-form"
            >
              <button
                type="submit"
                class="toggle-btn bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              >
                Toggle Published
              </button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/dashboard.js"></script>
    <!-- Include separate JavaScript file -->
  </body>
</html>
